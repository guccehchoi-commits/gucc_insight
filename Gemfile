source "https://rubygems.org"

# Jekyll 버전을 4.x로 올려서 인코딩 문제를 근본적으로 피합니다.
gem "jekyll", "~> 4.3"

# 테마 스타일을 불러오기 위한 필수 플러그인들입니다.
gem "jekyll-sass-converter", ">= 2.0"
gem "jekyll-remote-theme"
gem "jekyll-include-cache"

# Github Pages 환경과 비슷하게 맞춰주는 설정입니다.
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
end
